{
  "ignore": ["node_modules/**/*"],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "@babel/plugin-transform-react-jsx",
      {
        "pragma": "KalturaPlayer.ui.h"
      }
    ]
  ],
  "presets": [
    [
      "@babel/preset-env",
      {
        "loose": true,
        "bugfixes": true,
        "targets": {
          "browsers": ["chrome >= 47", "firefox >= 51", "ie >= 11", "safari >= 8", "ios >= 8", "android >= 4"]
        }
      }
    ]
  ]
}
